{
  "compilerOptions": {
    "target": "ES2015",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "incremental": false, // 增量编译
    "baseUrl": ".",
    "typeRoots": ["/@types", "./node_modules/@types"],
    "paths": {},
    "allowJs": true,
    "noImplicitAny": false,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "docs/components.d.ts",
    "docs/auto-imports.d.ts",
    "docs/**/*.ts",
    "docs/**/*.d.ts",
    "docs/**/*.tsx",
    "docs/**/*.vue",
    "docs/.vitepress/components/Copyright.vue"
  ],
  "exclude": [
    "node_modules",
    "docs/assets/**/*.js",
    "dist",
    "docs/**/*.spec.ts",
    "docs/**/*.test.ts"
  ],

  "references": []
}
